<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.programmerpeter.android.bitcurex"
    android:versionCode="1"
    android:versionName="1.0"
    android:allowBackup="false" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="TradeActivity">
            <intent-filter>
        		<action android:name="android.intent.action.MAIN" />
        		<category android:name="android.intent.category.LAUNCHER" />
    		</intent-filter>
        </activity>
        <activity android:name="AccountActivity"></activity>
        <activity android:name="LoginActivity"></activity>
        <activity android:name="LogoutActivity"></activity>
        <activity android:name="AlertActivity"></activity>
        <receiver android:name="AlertReceiver"></receiver>
        <activity android:name="MarketActivity"></activity>
    </application>

</manifest>
